.body{z-index: 0;}

.tab{padding: 0 5px}
.tit .select{float:right;height:34px;font-size:14px;}
.addr{height:40px;}
.phone{width: 100%;font-size: 14px;border-bottom: 1px solid #bbb;}

.pro{padding: 0 5px; border-bottom: 1px dotted #bbb;font-size: 12px;}
.pro .info{display:flex;justify-content: center;align-items: center; height: 120rpx; }
.pro .pimg{width: 150rpx;height: 120rpx;}
.pro .pname{padding-right:5px;font-size:14px;width:170px;}
.pro .pprice{width:70px;font-size:14px;}
.pro .ptprice{width:70px;color: #ff6a00;font-size: 18px;flex:1}
.pro .pdeliveryTime{width:70px;}
.pro .lineOrder{color: #ff6a00;}
.pro .chooseTime{width: 20px;}
.pro .remarks{color:#999;}

.tool{position: fixed;left: 0;bottom: 0; padding: 20rpx 0; display: flex; width: 750rpx;border-top: 1rpx solid #ddd;box-shadow: 0 -1px 5px 0 #eee;background-color: #fff; }
.tool .sub{background-color: #576b95;border: 1rpx solid #576b95; color: #fff;flex:1;margin: 0 20rpx;height: 40px;line-height: 40px; text-align: center;border-radius: 3px;}

