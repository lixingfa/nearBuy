<view class="body">
    <view wx:if="{{myOrder.length==0}}" class="null">暂无订单</view>
     <view class="item" data-poid="{{p.id}}" wx:for="{{myOrder}}" wx:key="id" wx:for-item="p">
      <view class='title'>
        <text>订单编号：{{p.id}} </text>
        <text>下单时间：{{p.date}}</text>
      </view>
      <view class="pro" wx:for="{{p.plist}}" wx:for-item="g" wx:key="id">
        <view class="info">
        <!--<image src="{{p.user.avatarUrl}}" class="pimg"></image>-->
        <text class="pname">{{g.title}}</text>
        <text class="pdeliveryTime">{{g.deliveryDate}} {{g.deliveryTime}}
        </text>
        <text class="chooseTime" wx:if="{{g.deliveryTime !=null && g.takeOut}}">配送</text>
        <text class="chooseTime lineOrder" wx:if="{{g.deliveryTime != null && g.lineOrder && !g.takeOut}}">取货</text>
        <text class="pprice">{{g.price}} x {{g.num}}</text>
        <text class="ptprice">{{g.price*g.num}}</text>
        <text class="pprice" wx:if="{{!g.needPay}}" data-id="{{g.id}}" data-oid="{{p.id}}" data-qrcode="{{g.qrcode}}" data-promulgator="{{g.promulgator}}" data-price="{{g.price}}" data-num="{{g.num}}" catchtap="pay">已付款</text>
        </view>
        <view class="remarks" wx:if="{{g.remarks != null}}">留言：{{g.remarks}}</view>
        
      </view>
      <view>地址：{{p.user.addr}} {{p.user.phone}}</view>
    </view>
</view>