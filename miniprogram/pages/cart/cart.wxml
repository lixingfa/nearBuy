<view class="tit">
  <view class="tit-back" catchtap="goBack" wx:if="{{his}}">返回</view>
  <text class="tit-text">向左滑动可移除</text>
  <view class="tit-tool" catchtap="clearCart">清空</view>
</view>

<view class="pro" animation="{{p._ani}}" wx:if="{{!p.del}}" wx:for="{{plist}}" wx:for-item="p" wx:key="id"><!--animation动画相关的属性-->
  <view class="pro-con" animation="{{p.ani}}" bindtouchstart="ptouchsatrt" data-index="{{p.index}}" bindtouchend="ptouchend" data-id="{{p.id}}" catchtap="goDetail"><!--bindtouchs触控事件-->
    <view class="pimg" data-index="{{p.index}}" data-name="{{p.title}}" data-brand="{{p.brand}}" catchtap="previewImg" >
      <image src="{{p.pic}}" mode="aspectFill"></image>
    </view>
    <view class="pname">
      <view class="name">{{p.title}}-{{p.promulgator}}</view>
      <!--<text class="des">{{p.inAWord}}</text>-->
    </view>
    <view class="ptprice">￥{{p.price*p.num}}</view>
    <view class="pnum">
      <view wx:if="{{p.num > 0}}" class="num num-a" data-type="-1" data-index="{{p.index}}" catchtouchstart="changeNum"><text>-</text></view>
      <text class="num-text">{{p.num}}</text>
      <view wx:if="{{p.surplus > 0}}" class="num num-b" data-type="1" data-index="{{p.index}}" catchtouchstart="changeNum"><text>+</text></view>
    </view>
  </view>
  <view class="del" data-id="{{p.id}}" data-index="{{p.index}}" catchtap="del">
    <text>删除</text>
  </view>
</view>

<view wx:if="{{plist.length==0}}" class="null">暂无商品</view>

<view class="tool">
  <view class="total">总金额：
    <text>￥{{total}}</text>
  </view>
  <button class="gobuy" open-type="getUserInfo" bindtap="goOrder">确认下单</button>
</view>
<view class="tool-layer"></view>