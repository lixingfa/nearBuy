/**index.wxss**/
#search{
  font-size: 14px;
  padding: 5px 10px;
  height:20px;
}
#search input{
  width: 580rpx;
  float: left;
}
#search button{
  height: 25px;
}

#banner  image{
  width: 750rpx;
  height: 300rpx;
}
.goodlist {
	clear: both;
	background: #ddd;
	font-size: 14px;
  padding-bottom: 5px;
}

.good-head {
	padding: 10rpx 10px;
	font-size: 20px;
  border-bottom: solid 1px #ccc;
  background: #fff;
}

.right {
	float: right;
}

.more{
	display: block;
	width: 150rpx;
  font-size: 12px;
  color: #aaa;
  margin-top: 20rpx;
  text-align: right;
}
.good-body{padding-top: 5px}
.good-item{
	padding: 0px 5px;
  margin-bottom: 5px;
  background: #fff;
  display:flex;
}

.good-inAWord{
  color:#999 ;
  overflow:hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-line-clamp:1;
  -webkit-box-orient:vertical;
}
.good-pic{
  padding-right:5px;
}
.good-pic image{
	width: 150rpx;
	height: 150rpx;
}

.good-title{
	font-size: 16px;
  overflow:hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-line-clamp:1;
  -webkit-box-orient:vertical;
}
.good-desc{
  font-size: 16px;
}
.good-price{
	color: orangered;
}

.other-info{
  font-size: 12px;
  color: #aaa;
}
.typeName{
  margin-left:10px;
}
.types{
  width:100%;background:#fff;position:fixed;top:30px; z-index:10;
}
.addr_body{display: flex;border-bottom:1px dashed #ccc;margin:10px;opacity: 0.9}
.sub_type{font-size:16px;background:#F0F8FF;margin:0 5px;}