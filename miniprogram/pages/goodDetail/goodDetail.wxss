view{padding: 0 5px;font-size: 16px;}
.good-title{font-size: 20px;text-align: center;}
.good-pic{text-align: center;}
.good-inAWord{color: #555;}
.good-price{color: #f00}

.tool{padding: 20rpx 0; display: flex;}
.tool .tbtn{height: 40px;line-height: 40px; text-align: center;border-radius: 3px;}
.tool .add{background-color: #f0f0f0;border: 1rpx solid #ddd;flex:1;margin: 0 10rpx 0 20rpx; position: relative;}
.cart-num{color:#f00;}

