<view class='good-item' catchtap="goDetail" data-id="{{good.id}}"><!--catchtap 会阻止冒泡事件，父容器的不执行-->
                        <view class='good-title'>{{good.title}}</view>
                        <view class='good-pic'>
                            <image src="{{good.pic}}" mode="aspectFill"></image>
                        </view>
                        <view class='good-desc'>
                            <view class='good-inAWord'>{{good.inAWord}}</view>

<text class='good-price'>{{good.price}}</text><text>元/{{good.unit}}</text>
                            <view class='other-info'>共{{good.total}}{{good.unit}}，剩余{{good.surplus}}{{good.unit}}，
                            {{good.promulgator}}发布，距您{{good.distance}}</view>
                        </view>
                    </view>

<view class="date tab" wx:if="{{good.chooseTime}}">
  <view class="tit" wx:if="{{good.takeOut}}">您希望的送货时间</view>
  <view class="tit" wx:if="{{good.lineOrder && !good.takeOut}}">您预计的取货时间</view>
  <view class="dt">
    <picker mode="date" value="{{good.deliveryDate}}" class="dt-item pos" start="{{dateStart}}" end="{{dateEnd}}" bindchange="bindDateChange">
      {{good.deliveryDate?good.deliveryDate:'选择日期'}}
    </picker>
    <picker mode="selector" value="{{good.deliveryTime}}" range="{{good.arrTime}}" class="dt-item pos" bindchange="bindTimeChange">
      {{good.arrTime[good.arrTimeIndex]}}
    </picker>
  </view>
</view>
<view class="date tab" style="height:200px;">
  <view class="tit">留言</view>
  <textarea bindblur="bindTextAreaBlur" style="height:150px;" placeholder="" value="{{good.remarks}}" maxlength="200" />
</view>

<view class="tool">
<view wx:if="{{good.surplus > 0}}" class="tbtn add" catchtap="addCart">加入购物车(<text class="cart-num">{{good.num}}</text>)</view>
<view class="tbtn add" catchtap="goCart">前往购物车</view>
