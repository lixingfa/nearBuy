<view class='good-item' catchtap="goDetail" data-id="{{good.id}}"><!--catchtap 会阻止冒泡事件，父容器的不执行-->
                        <view class='good-title'>{{good.title}}</view>
                        <view class='good-pic'>
                            <image src="{{good.pic}}" mode="aspectFill"></image>
                        </view>
                        <view class='good-desc'>
                            <view class='good-inAWord'>{{good.inAWord}}</view>

<text class='good-price'>{{good.price}}</text><text>元/{{good.unit}}</text>
                            <view class='other-info'>共{{good.total}}{{good.unit}}，剩余{{good.surplus}}{{good.unit}}，
                            {{good.promulgator}}发布，距您{{good.distance}}</view>
                        </view>
                    </view>

<view class="date tab" wx:if="{{good.lineOrder || good.takeOut}}">
  <view class="tit" wx:if="{{good.takeOut}}">希望配送日期/时间</view>
  <view class="tit" wx:if="{{good.lineOrder && !good.takeOut}}">预计取货日期/时间</view>
  <view class="dt">
    <picker mode="date" value="{{deliveryDate}}" class="dt-item pos" start="{{dateStart}}" end="{{dateEnd}}" bindchange="bindDateChange">
      {{oinfo.DeliveryDate?oinfo.DeliveryDate:'选择配送日期'}}
    </picker>
    <picker mode="selector" value="{{arrTimeIndex}}" range="{{arrTime}}" class="dt-item pos" bindchange="bindTimeChange">
      {{arrTime[arrTimeIndex]}}
    </picker>
  </view>
</view>
<view class="date tab" style="height:200px;"  wx:if="{{good.lineOrder || good.takeOut}}">
  <view class="tit">留言</view>
  <textarea bindblur="bindTextAreaBlur" auto-height placeholder="" value="{{oinfo.Remarks}}" />
</view>

<view class="tool">
<view wx:if="{{good.surplus > 0}}" class="tbtn add" catchtap="addCart">加入购物车(<text class="cart-num">{{cartNum}}</text>)</view>
    <!--<view wx:if="{{surplus == 0}}" class="tbtn add" catchtap="addCart">预订(<text class="cart-num">{{cartNum}}</text>)</view>增加复杂度-->
<view class="gobuy" bindtap="goOrder"><navigator url="/pages/cart/cart"
    open-type="switchTab"
    hover-class="other-navigator-hover"
>前往购物车</navigator></view>
</view>